<main>
  <h1>Kontraster</h1>

  <form action="/validate" enctype="" method="get">
    <div class="form-field">
      <label for="input-url">Website (required)</label>
      <input type="text" name="url" id="input-url" required
        {{#if validate.url}}value="{{validate.url}}"{{/if}}
        {{#if hasErrors}}aria-invalid="true" aria-describedby="input-url-errors"{{/if}}>

      {{#if error}}
      <div class="error-message" id="input-url-errors">{{{error}}}</div>
      {{/if}}
    </div>

    <div>
      <button type="submit">Check colour contrast</button>
    </div>
  </form>
</main>
